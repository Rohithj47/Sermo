<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over"
    tools:context=".ViewReportActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="62dp">

    <ScrollView
        android:id="@+id/ScrollViewContainer"
        android:layout_width="350dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/transparent"
        android:scrollbarSize="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/LinearLayoutWithinSearchContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/PatientInformationDisplayHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@color/transparent"
                android:fontFamily="sans-serif-black"
                android:text="Patient information"
                android:textColor="@color/primary_text"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/LinearLayoutWithinSearchContainer"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/PatientNameDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:fontFamily="sans-serif-medium"
                android:text="Name :"
                android:textColor="@color/primary_text"
                app:layout_constraintStart_toStartOf="@+id/ScrollViewContainer"
                app:layout_constraintTop_toBottomOf="@+id/PatientInformationDisplayHeading" />

            <TextView
                android:id="@+id/PatientAgeDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:fontFamily="sans-serif-medium"
                android:text="Age :"
                android:textColor="@color/primary_text"
                app:layout_constraintStart_toStartOf="@+id/ScrollViewContainer"
                app:layout_constraintTop_toBottomOf="@+id/PatientNameDisplay" />

            <TextView
                android:id="@+id/PatientGenderDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:fontFamily="sans-serif-medium"
                android:text="Gender : "
                android:textColor="@color/primary_text"
                app:layout_constraintStart_toStartOf="@+id/ScrollViewContainer"
                app:layout_constraintTop_toBottomOf="@+id/PatientAgeDisplay" />

            <TextView
                android:id="@+id/ReportSummariesDisplayHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@color/transparent"
                android:fontFamily="sans-serif-black"
                android:text="Report summaries"
                android:textColor="@color/primary_text"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/ScrollViewContainer"
                app:layout_constraintTop_toBottomOf="@+id/PatientGenderDisplay" />

            <TextView
                android:id="@+id/ConsultationSummaryHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/transparent"
                android:fontFamily="sans-serif-medium"
                android:text="Consultation"
                android:textColor="@color/primary_text"
                app:layout_constraintStart_toStartOf="@+id/ConsultationSummaryContent"
                app:layout_constraintTop_toBottomOf="@+id/ReportSummariesDisplayHeading" />

            <TextView
                android:id="@+id/ConsultationSummaryContent"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape"
                android:fontFamily="sans-serif-light"
                android:padding="10dp"
                android:text="TextView"
                android:textColor="@color/primary_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ConsultationSummaryHeading" />

            <TextView
                android:id="@+id/OperationSummaryHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/transparent"
                android:fontFamily="sans-serif-medium"
                android:text="Surgery"
                android:textColor="@color/primary_text"
                app:layout_constraintStart_toStartOf="@+id/OperationSummaryContent"
                app:layout_constraintTop_toBottomOf="@+id/ConsultationSummaryContent" />

            <TextView
                android:id="@+id/OperationSummaryContent"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape"
                android:fontFamily="sans-serif-light"
                android:padding="10dp"
                android:text="TextView"
                android:textColor="@color/primary_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/OperationSummaryHeading" />

            <TextView
                android:id="@+id/DoctorReviewHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/transparent"
                android:fontFamily="sans-serif-medium"
                android:text="Doctor's review"
                android:textColor="@color/primary_text"
                app:layout_constraintStart_toStartOf="@+id/DoctorReviewContent"
                app:layout_constraintTop_toBottomOf="@+id/OperationSummaryContent" />

            <TextView
                android:id="@+id/DoctorReviewContent"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape"
                android:fontFamily="sans-serif-light"
                android:padding="10dp"
                android:text="TextView"
                android:textColor="@color/primary_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.491"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/DoctorReviewHeading" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>