<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:backgroundTint="@color/background_tint"
    android:backgroundTintMode="src_over"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/generate_report_button"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="@color/primary_button"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.05"
        android:onClick="onGenerateReportButtonClick"
        android:text="Generate report"
        android:textAllCaps="false"
        android:textColor="@color/primary_button_text"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/primary_button_ripple" />

    <Button
        android:id="@+id/query_reports_button"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/primary_button"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.05"
        android:onClick="onQueryReportsButtonClick"
        android:text="Search reports"
        android:textAllCaps="false"
        android:textColor="@color/primary_button_text"
        app:cornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/generate_report_button"
        app:rippleColor="@color/primary_button_ripple" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="181dp"
        android:layout_height="441dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="-38dp"
        android:alpha="0.8"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/female_doctor" />
</androidx.constraintlayout.widget.ConstraintLayout>